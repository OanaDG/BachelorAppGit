<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.ConfirmOrderActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_setings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_setings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/imgReturnOrderBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/back_button"
                    android:layout_alignParentStart="true"/>


            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/tvConfirmOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm_your_shipment_details_please"
        android:layout_below="@id/app_bar_setings"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="15dp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etConfirmName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvConfirmOrder"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/log_btn"
        android:padding="8dp"
        android:textColor="@color/black"
        android:hint="@string/full_name"/>

    <EditText
        android:id="@+id/etConfirmEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etConfirmName"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:inputType="textEmailAddress"
        android:layout_marginRight="20dp"
        android:background="@drawable/log_btn"
        android:padding="8dp"
        android:textColor="@color/black"
        android:hint="@string/email"/>

    <EditText
        android:id="@+id/etConfirmPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etConfirmEmail"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:inputType="phone"
        android:layout_marginRight="20dp"
        android:background="@drawable/log_btn"
        android:padding="8dp"
        android:textColor="@color/black"
        android:hint="@string/phone_number"/>

    <EditText
        android:id="@+id/etConfirmAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etConfirmPhone"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/log_btn"
        android:padding="8dp"
        android:textColor="@color/black"
        android:hint="@string/shipment_address"/>

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="@string/confirm"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:textSize="20sp"/>

</RelativeLayout>