<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewHolder.CategoryActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_setings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_setings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/tvCategoryInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:text="@string/choose_a_category_of_books"
        android:padding="10dp"

       />


        <ImageView
            android:id="@+id/imgCategoryRecommender"
            android:layout_width="220dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/recommender"

            android:padding="10dp"

            android:layout_below="@id/tvCategoryInstruction"
            android:layout_marginTop="60dp"/>
    <TextView
        android:id="@id/tvCategoryRecommendation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recommendations"
        android:layout_below="@id/imgCategoryRecommender"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
       />

        <ImageView
            android:id="@+id/imgCategoryBestseller"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/bestseller"
            android:layout_below="@id/tvCategoryInstruction"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="60dp"/>
    <TextView
        android:id="@id/tvCategoryBestsellers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bestsellers"
        android:layout_below="@id/imgCategoryBestseller"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="255dp"/>



        <ImageView
            android:id="@+id/imgCategoryDiscount"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:padding="6dp"
            app:srcCompat="@drawable/discount"
            android:layout_below="@id/tvCategoryRecommendation"
            android:layout_marginTop="30dp"/>
    <TextView
        android:id="@id/tvCategoryDiscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/discounts"
        android:layout_below="@id/imgCategoryDiscount"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="50dp"/>

        <ImageView
            android:id="@+id/imgCategoryAll"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/book_pile"
            android:layout_below="@id/tvCategoryBestsellers"
            android:layout_marginLeft="200dp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginTop="30dp"/>
    <TextView
        android:id="@id/tvCategoryAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_books"
        android:layout_below="@id/imgCategoryAll"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="260dp"/>


</RelativeLayout>